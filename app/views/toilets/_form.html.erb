<%= javascript_include_tag 'toiletmap' %>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkRxr1XQJBEn2EPridAv5pB0BiW_6el2g&callback=initialiseMap&libraries=places" type="text/javascript"></script>
<script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
<%= form_for(@toilet) do |f| %>
    <%= render 'shared/toilet_error_messages', object: @toilet %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control', onFocus: "geolocate()" %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.label :parentsRoom  , {class: "checkbox inline"} %>
    <%= f.check_box :parentsRoom, class: 'form-control'%>

    <%= f.label :gender_neutral , {class: "checkbox inline"}  %>
    <%= f.check_box :gender_neutral, class: 'form-control' %>

    <%= f.label :female  , {class: "checkbox inline"} %>
    <%= f.check_box :female, class: 'form-control' %>

    <%= f.label :male  , {class: "checkbox inline"}  %>
    <%= f.check_box :male, class: 'form-control' %>

    <%= f.label :disabled_opt  , {class: "checkbox inline"}  %>
    <%= f.check_box :disabled_opt, class: 'form-control'%>

    <%= f.label :image %>
    <%= f.file_field :image, multiple: true %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
