<%= form_for(@toilet) do |f| %>
    <%= render 'shared/toilet_error_messages', object: @toilet %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.submit "Create toilet", class: "btn btn-primary" %>
<% end %>
