<%= form_tag edit_opening_hour_path do %>
  <% @weekday.each do |day| %>
    <%= fields_for 'weekday[]', day do |f| %>
		<h2>Weekday : <%= day.day %></h2>
		<%= f.label :open_time %>
    	<%= f.text_field :open_time, class: 'form-control' %>
    	<%= f.label :close_time %>
    	<%= f.text_field :close_time, class: 'form-control' %>

    <% end %>
  <% end %>
  <%= submit_tag yield(:button_text), class: "btn btn-primary" %>
<% end %>
