<%= javascript_include_tag 'toggle' %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Toilet location</th>
			<th>Female</th>
			<th>Male</th>
			<th>Gender neutral</th>
			<th>Baby Facility</th>
			<th>Wheelchair access</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @toilets.each do |toilet| %>
			<%= render 'home/populate_table', :toilet => toilet %>
		<% end %>
		<% @public_data_toilets.each do |toilet| %>
			<%= render 'home/populate_table', :toilet => toilet %>
		<% end %>

		<% if @cursor %>
		<nav>
			<ul class="pager">
				<li><%= link_to "More", root_path(cursor: @cursor) %></li>
			</ul>
		</nav>
		<% end %>
	</tbody>
</table>